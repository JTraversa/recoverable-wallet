{
	"name": "@zoltu/recoverable-wallet-library",
	"description": "TypeScript files for interfacing with the RecoverableWallet contracts.",
	"version": "1.0.0",
	"license": "Unlicense",
	"repository": {
		"type": "git",
		"url": "git@github.com:Zoltu/recoverable-wallet.git"
	},
	"main": "output/index.js",
	"dependencies": {
		"@zoltu/ethereum-abi-encoder": "3.2.2"
	},
	"devDependencies": {
		"@types/node": "12.12.14",
		"@zoltu/bigint-helpers": "2.0.1",
		"@zoltu/ethereum-crypto": "2.1.1",
		"@zoltu/solidity-typescript-generator": "3.0.2",
		"solc": "0.5.8",
		"ts-node": "8.5.4",
		"typescript": "3.7.3"
	},
	"files": [
		"/output/",
		"/source/"
	],
	"scripts": {
		"build": "ts-node --project scripts/tsconfig.json scripts/compile.ts && tsc",
		"prepublishOnly": "npm run build && node --eval \"require('fs').copyFile('../README.md', 'README.md', error => {if(error) throw error})\"",
		"postpublish": "node --eval \"require('fs').unlink('README.md', error => {if(error) throw error})\""
	}
}
