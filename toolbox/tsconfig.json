{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "output",
		"rootDir": "source",
		"strict": true,
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [ "es2018" ],
		"typeRoots": [ "./node_modules/@types", "./typings" ],
	},
	"include": [
		"source/**/*.ts",
	]
}
