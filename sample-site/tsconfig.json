{
	"compilerOptions": {
		"target": "es2018",
		"module": "es2015",
		"moduleResolution": "classic",
		"outDir": "output",
		"rootDir": "source",
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [ "dom", "es2018" ],
		"typeRoots": [ "node_modules/@types" ]
	},
	"include": [
		"source/**/*.ts",
	]
}
